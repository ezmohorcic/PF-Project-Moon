{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "watch": false,
    "strict": true,
    "declaration": true
  },
  "lib": ["es2015"],
  "include": ["./src/*.ts","./src/*/*.ts"],
  "exclude": ["node_modules", "/*.spec.ts"]
}
